<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.bijaya.bookstore.Fragments.HomeFragment">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Bookstore"
            android:textSize="38dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@drawable/background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HARRY POTTER"
                    android:textSize="30dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="sans-serif-black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/desc1"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif"
                    />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:maxHeight="100dp"
                    android:src="@drawable/harrypotter"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="-30dp"
                    />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@drawable/background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Different Sun"
                    android:textSize="30dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="sans-serif-black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="This Book is written by J.K Rowling, \nclose J.K. Rowling is the British \nclose author who created the \nclose popular and critically \nclose acclaimed Harry Potter \nclose series (seven books published between 1997 and 2007)"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif"
                    />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:maxHeight="100dp"
                    android:layout_marginRight="-30dp"
                    android:src="@drawable/differentsun"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@drawable/background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ferdinand"
                    android:textSize="30dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="sans-serif-black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="This Book is written by J.K Rowling, \nclose J.K. Rowling is the British \nclose author who created the \nclose popular and critically \nclose acclaimed Harry Potter \nclose series (seven books published between 1997 and 2007)"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif"
                    />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:maxHeight="100dp"
                    android:layout_marginRight="-30dp"
                    android:src="@drawable/ferdinand"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>







</LinearLayout>