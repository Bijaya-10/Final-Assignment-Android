<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.bijaya.bookstore.Fragments.ContactFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Contact Us Page"
            android:textSize="38dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"/>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="150dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@drawable/background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="        Contact Us For Further Details"
                android:textSize="25dp"
                android:layout_marginTop="1dp"
                android:fontFamily="sans-serif-black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9860848209"
                android:textSize="40sp"
                android:paddingTop="0dp"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-black"
                android:layout_centerHorizontal="true"
                />
            <ImageView
                android:layout_width="50sp"
                android:layout_height="55sp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/call"
                android:layout_centerVertical="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="150dp"
                />
            <ImageView
                android:layout_width="50sp"
                android:layout_height="40sp"
                android:layout_marginLeft="47dp"
                android:background="@drawable/message"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="25dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="30dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile"
                android:textSize="30sp"
                android:paddingTop="100sp"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-black"
                android:layout_centerHorizontal="true"
                />



        </RelativeLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="370dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@drawable/background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="        Contact Us For Further Details"
                android:textSize="25dp"
                android:layout_marginTop="1dp"
                android:fontFamily="sans-serif-black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="014237999"
                android:textSize="40sp"
                android:paddingTop="0dp"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-black"
                android:layout_centerHorizontal="true"
                />
            <ImageView
                android:layout_width="50sp"
                android:layout_height="55sp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/call"
                android:layout_centerVertical="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="150dp"
                />
            <ImageView
                android:layout_width="50sp"
                android:layout_height="40sp"
                android:layout_marginLeft="47dp"
                android:background="@drawable/message"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="25dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telephone Number"
                android:textSize="30sp"
                android:paddingTop="100sp"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-black"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>







</FrameLayout>
































