<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cardview_shadow_start_color"
    tools:context="com.bijaya.bookstore.about">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_margin="10dp"
            android:id="@+id/btnhome2"
            android:layout_weight="1"
            android:text="Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:id="@+id/btnabout2"
            android:text="About Us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:id="@+id/btncontact2"
            android:text="Contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="THIS IS ABOUT US PAGE"
                android:textSize="30dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                />






            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselView"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:fillColor="#FFFFFF"
                app:pageColor="#000000"
                app:radius="6dp"
                android:layout_marginTop="10dp"
                app:slideInterval="4000"
                app:strokeColor="#FF777777"
                app:strokeWidth="1dp"
                app:autoPlay="true"
                />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="800dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/cardview_shadow_start_color"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
         >



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="@string/desc7"
                        android:textSize="20dp"

                        android:fontFamily="sans-serif"
                        />


                    <ImageView
                        android:layout_width="500dp"
                        android:layout_height="300dp"
                        android:maxHeight="100dp"
                        android:layout_marginRight="-30dp"
                        android:src="@drawable/i26"
                        android:layout_marginTop="600dp"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Drawbacks Of Bookstore"
                android:textSize="30dp"
                android:textStyle="bold"


                android:fontFamily="sans-serif"
                />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="800dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/cardview_shadow_start_color"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    >



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="@string/desc9"
                        android:textSize="20dp"

                        android:fontFamily="sans-serif"
                        />

                    <ImageView
                        android:layout_width="580dp"
                        android:layout_height="300dp"
                        android:maxHeight="100dp"
                        android:layout_marginRight="0dp"
                        android:src="@drawable/i25"
                        android:layout_marginTop="600dp"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>





            </androidx.cardview.widget.CardView>






            <Button
                android:id="@+id/btnread1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center"

                android:background="#2196F3"
                android:text="Book Updates"
                android:textSize="20sp" />




        </LinearLayout>
    </ScrollView>






</LinearLayout>